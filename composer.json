{
  "require": {
    "slim/slim": "4.*",
    "slim/psr7": "^1.6",
    "nyholm/psr7": "^1.5",
    "nyholm/psr7-server": "^1.0",
    "vlucas/phpdotenv": "^5.5",
    "php-di/php-di": "^7.0",
    "php-di/slim-bridge": "^3.0",
    "tuupola/slim-jwt-auth": "^3.5",
    "firebase/php-jwt": "^5.3",
    "illuminate/database": "^7.11",
    "slim/flash": "^0.4.0",
    "respect/validation": "^2.2",
    "slim/twig-view": "^3.3",
    "slim/csrf": "^1.3",
    "symfony/mailer": "^v6.2.7",
    "symfony/twig-bridge": "^v6.2.7",
    "guzzlehttp/psr7": "^2",
    "sapphirecat/slim4-http-interop-adapter": "^1.1",
    "laminas/laminas-diactoros": "^2.24"
  },
  "require-dev": {
    "ext-pdo": "*",
    "friendsofphp/php-cs-fixer": "^3",
    "phpstan/phpstan": "1.*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Migrations\\": "migrations/"
    }
  },
  "scripts": {
    "cs:check": "php-cs-fixer fix --dry-run --format=txt --diff --config=.cs.php --ansi",
    "cs:fix": "php-cs-fixer fix --config=.cs.php --ansi",
    "stan": "phpstan analyse -c phpstan.neon --no-progress --ansi",
    "test:all": [
      "@cs:check",
      "@stan"
    ],
    "xdebug:disable": "php -d xdebug.mode=off -i | grep xdebug.mode",
    "xdebug:enable": "php -d xdebug.mode=on -i | grep xdebug.mode"
  }
}